<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Entry x:Name="ety_cpe" Placeholder="Digite o CEP"/>
            <Button Clicked="OnCounterClicked" Text="Consulta CEP"/>
            <Label x:Name="lb_cep" Text="Cep : "/>
            <Label x:Name="lb_bairro" Text="Bairro : "/>
            <Label x:Name="lb_logradouro" Text="Logradouro : "/>
            <Label x:Name="lb_ddd" Text="DDD : "/>
            <Label x:Name="lb_uf" Text="UF : "/>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
